{
  "variables": {
    "ssh_name": "vagrant",
    "ssh_pass": "vagrant",
    "hostname": "precise64-basebox",
    "version_name": "precise64"
  },

  "builders": [
    {
      "name": "basebox",
      "type": "virtualbox-ovf",
      "source_path": "output-basevm/packer-{{user `version_name`}}-basevm.ovf",
      "guest_additions_mode": "upload",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "ssh_username": "{{user `ssh_name`}}",
      "ssh_password": "{{user `ssh_pass`}}",
      "ssh_port": 22,
      "shutdown_command": "echo {{user `ssh_pass`}} | sudo -S shutdown -P now",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--macaddress1", "0800279C73F6" ]
      ]
    }
  ],

  "post-processors": [
    {
      "type": "vagrant",
      "output": "{{user `version_name`}}_{{.BuildName}}_{{.Provider}}.box"
    }
  ],

  "provisioners": [
    {
      "override": {
        "basebox": {
          "execute_command": "echo {{user `ssh_pass`}} | sudo -S sh '{{ .Path }}'"
        }
      },
      "scripts": [
        "scripts/guest_additions.sh"
      ],
      "type": "shell"
    }
  ]
}

