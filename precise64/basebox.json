{
  "variables": {
    "ssh_name": "vagrant",
    "ssh_pass": "vagrant",
    "hostname": "basebox"
  },
  "builders": [
    {
      "type": "virtualbox-ovf",
      "source_path": "output-virtualbox-iso/packer-virtualbox-iso.ovf",
      "ssh_username": "{{user `ssh_name`}}",
      "ssh_password": "{{user `ssh_pass`}}",
      "ssh_port": 22,
      "shutdown_command": "echo {{user `ssh_pass`}} | sudo -S shutdown -P now",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--macaddress1", "0800279C73F6" ]
      ]
    }
  ],
  "post-processors": [
    "vagrant"
  ],
  "provisioners": [
    {
      "override": {
        "virtualbox-ovf": {
          "execute_command": "echo {{user `ssh_pass`}} | sudo -S sh '{{ .Path }}'"
        }
      },
      "scripts": [
        "scripts/guest_additions.sh"
      ],
      "type": "shell"
    }
  ]
}

